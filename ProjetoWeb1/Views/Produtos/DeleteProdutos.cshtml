@model ProjetoWeb1.Models.Produtos

@{
    ViewBag.Title = "Excluir Produtos";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("DeletarProdutos", "Produtos"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label>
                Informe o Codigo do Produto que deseja Excluir
            </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deletar" class="btn btn-default" />
            </div>
        </div>
    </div>
}